{
    "name": "react-express-mongo",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "install-all": "yarn install && yarn --cwd client install && yarn --cwd server install",
        "test": "yarn test_server; yarn test_client",
        "test_client": "yarn --cwd client test --watch-all=false",
        "test_server": "yarn --cwd server test --watch-all=false",
        "client": "npm run start --prefix client",
        "server": "npm run start --prefix server",
        "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
        "start": "npm run dev"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@material-ui/pickers": "^3.2.10"
    },
    "devDependencies": {
        "concurrently": "^5.0.2",
        "husky": "^3.1.0",
        "nodemon": "^2.0.2",
        "prettier": "1.19.1",
        "pretty-quick": "^2.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && (yarn test || 0)"
        }
    }
}
