<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="tx-center">Edit <%=article.name%></h1>
		
		<div class="new-form">
			<form action="/articles/<%=article._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="article[name]" value="<%= article.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="article[price]" value="<%= article.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="article[image]"  value="<%= article.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="article[description]"  value="<%= article.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-block primary">Submit</button>
				</div>
			</form>
			
			<a href="/articles/<%=article._id%>" name="backToArticles">Go back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>