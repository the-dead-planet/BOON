<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="tx-center">Add a new comment to Sprint <%= sprint.number %>: <%= sprint.name %></h1>
		<% console.log("testing " + sprint.name) %>
		
		<div class="new-form">
			<form action="<%= path %>" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="comment">
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-block primary">Submit</button>
				</div>
			</form>
			
			<a href="<%= path.substring(0, path.indexOf('comments')) %>" name="backToSprints">Go back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>