<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="tx-center">Edit Comment</h1>
		
		<div class="new-form">
			<form action="/sprints/<%= sprint_id %>/posts/<%= post._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="post[name]" value="<%= post.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="post[description]" value="<%= post.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-block primary">Submit</button>
				</div>
			</form>
			
			<a href="/sprints/<%= sprint_id %>" name="backToSprints">Go back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>