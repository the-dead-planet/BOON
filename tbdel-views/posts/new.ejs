<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="tx-center">Add a new post to Sprint <%= sprint.number %>: <%= sprint.name %></h1>
		
		<div class="new-form">
			<form action="/sprints/<%= sprint._id %>/posts" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="post[name]" placeholder="post">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="post[description]" placeholder="post">
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-block primary">Submit</button>
				</div>
			</form>
			
			<a href="/sprints/<%= sprint._id %>" name="backToSprints">Go back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>