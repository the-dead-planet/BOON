<% include ../partials/header %>

<div class="container">

	<div class="row" style="display:flex; flex-wrap:wrap">
		<div class="col-lg-12">
			<h3>Check it out</h3>
		</div>
	</div>
	
	<div class="row text-center disp-flex">
		<%if (articles.length > 0){%>
			<%articles.forEach(function(article){%>
				<div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
					<div class="thumbnail">
						<img src="<%=article.image%>" class="img-fluid">
						<div>
							Added by: <strong><%= article.author.username %></strong>
						</div>
						<div class="caption">
							<h4><%= article.name %></h4>
						</div>
						<p>
							<a href="/articles/<%= article._id %>" class="btn btn-primary">More info</a>
						</p>
					</div>
				</div>
			<%});%>
		<%} else {%>
			<p>Time to fill in this space...</p>
		<%}%>
	</div>


	<div class="ui top attached segment">
		<div class="ui divided items">
			<% articles.forEach(function(article){ %>
				<div class="item">
					<div class="image">
						<img src="<%= article.image %>">
					</div>
					
					<div class="content">
						<a class="header" href="/articles/<%= article._id %>"><%= article.name %></a>
						<div class="meta">
							
						</div>
						<div class="description">
							<%- article.description.substring(0, 100) %>...
						</div>
					
						<div class="extra">
							<a class="ui floated basic blue button" href="/articles/<%= article._id %>">
								Read More
								<i class="right chevron icon"></i>
							</a>
						</div>
					</div>
				</div>
			<% }); %>
		</div>
	</div>
	
</div>


<% include ../partials/footer %>